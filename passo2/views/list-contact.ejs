<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/stylesheets/contact.css">
    
</head>

<body>
    <div class="container">

    <h1>
        <%= title %>
    </h1>
    <p><a href="/contact">Novo contato</a> | <a href="/">Home</a></p>

    <% if (!contatos || contatos.length===0) { %>
        <p>Nenhum contato cadastrado ainda.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>E-mail</th>
                        <th>Idade</th>
                        <th>Gênero</th>
                        <th>Interesses</th>
                        <th>Mensagem</th>
                        <th>Criado em</th>
                        <th>Ações</th>

                    </tr>
                </thead>
                <tbody>
                    <% contatos.forEach(c=> { %>
                        <tr>
                            <td>
                                <%= c.id %>
                            </td>
                            <td>
                                <%= c.nome %>
                            </td>
                            <td>
                                <%= c.email %>
                            </td>
                            <td>
                                <%= c.idade || '-' %>
                            </td>
                            <td>
                                <%= c.genero || '-' %>
                            </td>
                            <td>
                                <% if (c.interesses) { %>
                                    <%= c.interesses.split(',').join(', ') %>
              <% } else { %>
                -
              <% } %>
            </td>
            <td><%= c.mensagem %></td>
            <td><%= c.criado_em %></td>
            <td class="actions">
                <form action="/contact/<%= c.id %>/delete" method="post"
                    onsubmit="return confirm('Tem certeza que deseja excluir o contato <%= c.nome %>?');">
                    <button type="submit">Excluir</button>
                </form>
            </td>

          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %></div>
</body>
</html>